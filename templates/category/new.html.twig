{% extends 'base.html.twig' %}

{% block title %}Add a new {% endblock %}

{% block body %}

    <h3>Nouvelle catégorie</h3>

    {{ form_start(form)}}

    <div class="row">
        <div class="col">
            {{ form_row(form.name)}}

        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i>
        Ajouter
    </button>
    {{ form_end(form)}}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}