{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" style=" width:350px; height:500px;" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>


            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li>{{ actor.name }} </li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="row">
        {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>
        {%endif%}
    </div>

    <div class="row">
        <a href="{{ path('category_index') }}">
            Retour à la liste des catégories
        </a>
    </div>

{% endblock %}